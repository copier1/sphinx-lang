# Evaluate the 'else' expression if the condition is false.
if true then echo "good" else assert false end  # expect: good
if false then assert false else echo "good" end  # expect: good

# Allow block condition.
if (begin echo "block" end) then    # expect: block
    assert false 
end  

if (begin echo "block" true end) then   # expect: block
    nil 
else 
    assert false
end 