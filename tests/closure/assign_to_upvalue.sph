var f = nil
var g = nil

begin
    var value = "local"
    fun f_()
        print(echo(value))
        nonlocal value = "after f"
        print(echo(value))
    end
    f = f_
    
    fun g_()
        print(echo(value))
        nonlocal value = "after g"
        print(echo(value))
    end
    g = g_
end

f()
# expect: local
# expect: after f

g()
# expect: after f
# expect: after g